{{# if products }}

<div class="row">
  <div class="col-md-6 offset-md-3 margin-top-15">
    <ul class="list-group">
      {{# each products }}
        <li class="list-group-item">

          <strong>
            <a href="#"><i class="fa fa-times"></i></a>
             {{ this.item.title }}
           </strong>
          <span class="badge badge-secondary">{{ this.qty }}</span>
          <span class="badge badge-info"><a href="#"> -1 </a></span>
          <span class="badge badge-info"><a href="#"> +1 </a></span>
          <span class="badge badge-success float-right">€ {{this.price }}</span>
        </li>
      {{/each}}
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-6 offset-md-3 margin-top-15">
    <hr>
    <strong>Total: €{{ totalPrice }}</strong>
      <a href="/checkout" type="button" class="btn btn-success float-right">Checkout</a>
  </div>
</div>

