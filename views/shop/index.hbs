<div class="row">
  <div class="col-md-4 offset-md-4 col-sm-6 offset-sm-3 margin-top-15">
    <div class="alert alert-success {{#if noMessages}}hidden{{/if}}" id="success">
      {{successMsg}}
    </div>
  </div>
</div>

<div class="row">
 {{# each products }}
        <div class="col-md-4 margin-top-15">
        <div class="card img-fluid">
          <img src="{{ this.imagePath }}" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">{{ this.title }}</h5>
            <p class="card-text description">{{ this.description }}</p>
          </div>
          <div class="card-footer clearfix">
            <div class="price float-left">â‚¬ {{ this.price }}</div>
            <a href="/add-to-cart/{{this.id}}" class="btn btn-success float-right">Add to shopping cart</a>
          </div>
        </div>
         </div>
      {{/each}}
</div>
